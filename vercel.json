{
  "version": 2,
  "builds": [
    { "src": "frontend/**", "use": "@vercel/static" },
    { "src": "app/api/simple_api.py", "use": "@vercel/python" },
    { "src": "app/api/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api", "dest": "app/api/simple_api.py" },
    { "src": "/api/(.*)", "dest": "app/api/simple_api.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
} 